{
  "name": "night-owl-server",
  "version": "1.0.0",
  "description": "Night Owl Server application",
  "main": "dist/apps/night-owl-server/main.js",
  "scripts": {
    "build": "esbuild apps/night-owl-server/src/main.ts --platform=node --outfile=dist/apps/night-owl-server/main.js",
    "serve": "node dist/apps/night-owl-server/main.js",
    "start": "npm run build && npm run serve",
    "build:watch": "esbuild apps/night-owl-server/src/main.ts --platform=node --outfile=dist/apps/night-owl-server/main.js --watch",
    "serve:dev": "nodemon dist/apps/night-owl-server/main.js",
    "start:dev": "npm run build:watch & npm run serve:dev"
  },
  "dependencies": {
    "express": "*"
  },
  "devDependencies": {
    "@nx/esbuild": "*",
    "nodemon": "*"
  }
}
